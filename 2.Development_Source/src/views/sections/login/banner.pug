section.section.banner-login.position-relative.float-start
    .box-banner-abs
        .container
            .row.align-items-center
                .col-xxl-5.col-xl-12.col-lg-12
                    .box-banner-login
                        h2.color-brand-1.mb-15.wow.animate__animated.animate__fadeIn(data-wow-delay='.0s')  Welcome back
                        p.font-md.color-grey-500.wow.animate__animated.animate__fadeIn(data-wow-delay='.2s')  Fill your email address and password to sign in.
                        .line-login.mt-25.mb-50
                        .row.wow.animate__animated.animate__fadeIn(data-wow-delay='.4s')
                            .col-lg-12
                                .form-group.mb-25
                                    input.form-control.icon-user(type="text", placeholder="Username")
                            .col-lg-12
                                .form-group.mb-25
                                    input.form-control.icon-password(type="text", placeholder="Password")
                            .col-lg-6.col-6.mt-15
                                .form-group.mb-25
                                    label.cb-container
                                        input(type='checkbox', checked='checked')
                                        span.text-small Remember me
                                        span.checkmark
                            .col-lg-6.col-6.mt-15
                                .form-group.mb-25.text-end
                                    a.font-xs.color-grey-500(href="#") Forgot password?
                            .col-lg-12.mb-25
                                button.btn.btn-brand-lg.btn-full.font-md-bold(type="submit") Sign in
                            .col-lg-12
                                span.color-grey-500.d-inline-block.align-middle.font-sm
                                    | Don’t have an account?
                                    |
                                a.d-inline-block.align-middle.color-success.ml-3(href="register.html")
                                    |   Sign up now


    .row.m-0
        .col-xxl-5.col-xl-7.col-lg-6
        .col-xxl-7.col-xl-5.col-lg-6.pr-0
            .d-none.d-xxl-block.pl-70
                .img-reveal
                    img.w-100.d-block(src="assets/imgs/page/login/banner.png", alt="Flowedge")